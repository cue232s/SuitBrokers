<% @page_title = "Product Feature List" %>


<article class="module width_3_quarter">
  <header>
    <h3 class="tabs_involved">Product Features for <%=	 @product.name %></h3>

    <ul class="tabs">

       <li> <%=	 link_to("Add new Product Feature", {:action => 'new', :product_id => @product.id}, :class => 'action new') %></li>

    </ul>

  </header>

  <table class="tablesorter" summary="product features list">
    <thead>
    <tr class="header">
      <th>&nbsp;</th>
      <th>Position</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <%	 @product_features.each do |product_feature| %>
        <tr class="<%= cycle('odd', 'even') %>">
          <td><%=    product_feature.position %></td>
          <td><%=	 link_to(image_tag(product_feature.photo.url(:thumb)),{:action => 'show', :id => product_feature.id})  %></td>
          <td><%=	 product_feature.name %></td>
          <td class="actions">
            <%= link_to("Show Features", {:controller => 'Product_feature_options', :action => 'list', :product_feature_id => product_feature.id}, :class => 'action show') %>
            <%= link_to("Show", {:action => 'show', :id => product_feature.id}, :class => 'action show') %>
            <%= link_to("Edit", {:action => 'edit', :id => product_feature.id, :product_id => product_feature.product_id}, :class => 'action edit') %>
            <%= link_to("Delete", {:action => 'delete', :id => product_feature.id}, :class => 'action delete') %>

          </td>
        </tr>
    <%	 end %>
    </tbody>
  </table>


</article>