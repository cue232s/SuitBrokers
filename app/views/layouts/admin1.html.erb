    <%=  stylesheet_link_tag('admin/layout', :media => 'screen') %>
	<!--[if lt IE 9]>
    <%=  stylesheet_link_tag('admin/ie', :media => 'screen') %>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
